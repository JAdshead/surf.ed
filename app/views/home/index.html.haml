
.menu
  .q.unaswered-q-tab
    %p Unaswered Questions

  .q.top-q-tab
    %p Top Questions

  .q.top-users-tab
    %p Top Users


.top-questions-content
  %h3 topics all
  %ul
    - @topics.each do |topic|
      %li
        =link_to topic.question, topic
        Stars:
        = topic.votes_for

.top-users-content
  %h3 users all 
  %ul
    - @users.each do |user|
      %li
        - if user.name
          =link_to user.name, user
          = user.score

.unaswered-questions-content 
  %h3 unansered questions
  %ul
    - @unanswered.each do |topic|
      %li
        =link_to topic.question, topic